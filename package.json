{
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "web-test-runner \"src/**/*.test.jsx\"",
    "lint": "eslint . --ext .js,.jsx"
  },
  "dependencies": {
    "@pixi/ticker": "^5.3.3",
    "@reduxjs/toolkit": "^1.4.0",
    "@tippyjs/react": "^4.2.0",
    "@tweenjs/tween.js": "^18.6.4",
    "autoprefixer": "^10.0.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jquery": "^3.5.1",
    "postcss": "^8.1.9",
    "postcss-cli": "^8.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "tailwindcss": "^2.0.1"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.4",
    "@snowpack/plugin-react-refresh": "^2.3.7",
    "@snowpack/web-test-runner-plugin": "^0.1.4",
    "@testing-library/react": "^11.2.2",
    "@web/test-runner": "^0.9.12",
    "chai": "^4.2.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unicorn": "^23.0.0",
    "prettier": "^2.2.0",
    "snowpack": "^2.17.1"
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "eslint:all",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:unicorn/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/strict",
      "prettier/unicorn",
      "prettier/react",
      "plugin:prettier/recommended"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "createjs": "readonly"
    },
    "plugins": [
      "react",
      "react-hooks",
      "import",
      "unicorn",
      "jsx-a11y"
    ],
    "rules": {
      "max-lines-per-function": 0,
      "max-statements": 0,
      "max-params": 0,
      "max-lines": 0,
      "max-depth": 0,
      "id-length": 0,
      "one-var": 0,
      "no-magic-numbers": 0,
      "no-underscore-dangle": 0,
      "no-plusplus": 0,
      "no-ternary": 0,
      "no-param-reassign": 0,
      "func-style": 0,
      "func-names": 0,
      "eqeqeq": 0,
      "sort-keys": 0,
      "no-bitwise": 0,
      "no-empty-function": 0,
      "guard-for-in": 0,
      "no-prototype-builtins": 1,
      "no-undefined": 0,
      "prefer-rest-params": 0,
      "prefer-destructuring": 0,
      "operator-assignment": 0,
      "no-nested-ternary": 0,
      "init-declarations": 0,
      "no-continue": 0,
      "no-loop-func": 0,
      "camelcase": 0,
      "complexity": 0,
      "unicorn/no-null": 0,
      "unicorn/prevent-abbreviations": 0,
      "unicorn/filename-case": [
        "error",
        {
          "case": "camelCase"
        }
      ],
      "capitalized-comments": 0,
      "multiline-comment-style": 0,
      "curly": [
        "error",
        "all"
      ],
      "no-confusing-arrow": [
        "error",
        {
          "allowParens": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "/frhd",
    "public",
    "createjs.js"
  ],
  "prettier": {
    "useTabs": true
  },
  "snowpack": {
    "mount": {
      "public": "/",
      "src": "/_dist_"
    },
    "plugins": [
      "@snowpack/plugin-react-refresh",
      "@snowpack/plugin-dotenv",
      [
        "@snowpack/plugin-build-script",
        {
          "cmd": "postcss",
          "input": [
            ".css"
          ],
          "output": [
            ".css"
          ]
        }
      ]
    ],
    "install": [],
    "installOptions": {},
    "devOptions": {},
    "buildOptions": {},
    "proxy": {},
    "alias": {}
  }
}
